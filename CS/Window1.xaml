<Window x:Class="DXGrid_FocusedRow.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:local="clr-namespace:DXGrid_FocusedRow"
    Title="Window1" Height="350" Width="450" >
    <DockPanel>
        <ListBox Name="listBox" Width="100" ItemsSource="{Binding}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Text1}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <dxg:GridControl x:Name="grid" DataSource="{Binding}">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="Number1" />
                <dxg:GridColumn FieldName="Number2" />
                <dxg:GridColumn FieldName="Text1" />
                <dxg:GridColumn FieldName="Text2" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <local:MyView x:Name="view" AutoWidth="True" NavigationStyle="Row" 
                              FocusedRow="{Binding SelectedItem, Mode=TwoWay, ElementName=listBox}"/>
            </dxg:GridControl.View>
        </dxg:GridControl>
    </DockPanel>
</Window>
